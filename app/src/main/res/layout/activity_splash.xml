<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/TextOfGid"
        android:layout_width="360dp"
        android:layout_height="239dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mukta_extrabold"
        android:text="Супергид, ваш путеводитель \nпо достопримечательностям \nЛенинградской области"
        android:textAppearance="@style/Animation.Design.BottomSheetDialog"
        android:textColor="@color/DarkGray"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/LogoOfGid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LogoOfGid"
        app:layout_constraintTop_toBottomOf="@+id/LogoOfGid" />

    <ImageView
        android:id="@+id/LogoOfGid"
        android:layout_width="179dp"
        android:layout_height="149dp"
        android:layout_marginTop="212dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>